<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisualActivity"
    android:orientation="horizontal">

    <ImageView
        android:contentDescription="@string/pick1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/visual_rect"
        />

    <ImageButton
        android:id="@+id/balloon_start_Button"
        android:layout_width="210dp"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:layout_marginRight="250dp"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_0"
        tools:layout_editor_absoluteX="424dp"
        tools:layout_editor_absoluteY="95dp"

        android:onClick="onClickButton"/>

    <ImageButton
        android:id="@+id/cl_start_Button"
        android:layout_width="210dp"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_1"
        tools:layout_editor_absoluteX="424dp"
        tools:layout_editor_absoluteY="95dp"

        android:onClick="onClickButton"/>







</android.support.constraint.ConstraintLayout>