<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    tools:layout_editor_absoluteY="25dp">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/registerkoreangif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:Absolutelayout_editor_absoluteX="0dp"
        tools:Absolutelayout_editor_absoluteY="-6dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <EditText
        android:id="@+id/etUsername"

        android:layout_width="93dp"
        android:layout_height="52dp"
        android:layout_marginTop="134dp"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:hint="사용자 이름"
        android:inputType="text"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/etConfirmPassword"
        app:layout_constraintStart_toStartOf="@+id/etPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="225dp"
        android:layout_height="52dp"
        android:layout_marginBottom="44dp"
        android:ellipsize="end"
        android:ems="10"
        android:gravity="start|center_vertical"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/etUsername"
        app:layout_constraintEnd_toEndOf="@+id/etUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etUsername" />


    <cyd.awesome.material.AwesomeText
        android:id="@+id/pwd_show_hide"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="6dp"
        android:textColor="#2F4F4F"
        android:textSize="20sp"
        app:awesome_font="material_design"
        app:awesome_icon="MD_VISIBILITY_OFF"
        app:layout_constraintBottom_toTopOf="@+id/etConfirmPassword"
        app:layout_constraintStart_toEndOf="@+id/etPassword" />



    <EditText
        android:id="@+id/etPassword"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="암호"
        android:inputType="textPassword"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etConfirmPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etConfirmPassword"
        app:layout_constraintTop_toTopOf="@+id/etUsername"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="224dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsername" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="216dp"
        android:layout_height="47dp"
        android:layout_marginStart="414dp"
        android:layout_marginBottom="124dp"
        android:alpha="0"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="30dp"
        android:layout_height="19dp"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@drawable/hg" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="16dp"
        android:alpha="0"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="94dp"
        android:layout_height="62dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="12dp"
        android:alpha="0"
        android:onClick="clickexit"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="110dp"
        android:layout_height="51dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:hint="나이"
        android:inputType="number"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="#2F4F4F"
        app:layout_constraintStart_toEndOf="@+id/etUsername"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

