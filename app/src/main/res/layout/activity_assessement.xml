        app:srcCompat="@drawable/assessementkorpic"
        tools:Absolutelayout_editor_absoluteX="0dp"
        tools:Absolutelayout_editor_absoluteY="-6dp" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="101dp"
